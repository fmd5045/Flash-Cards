<h1>Update Card</h1>

<% @card.errors.full_messages.each do |error_message| %>
  <%= error_message %>.
<% end %>

<%= form_with model: @card do |form| %>
  <div>
    <%= form.label :term %><br>
    <%= form.text_field :term %>
  </div>

  <div>
    <%= form.label :definition %><br>
    <%= form.text_area :definition %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <%= link_to "Return", @card %>
<% end %>